<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.RoyalInstitute.controller.CourseRegistrationViewController">
   <children>
      <Label layoutX="54.0" layoutY="38.0" prefHeight="75.0" prefWidth="440.0" text="Course Registration">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
      </Label>
      <JFXTextField fx:id="txtProgramId" labelFloat="true" layoutX="50.0" layoutY="150.0" prefHeight="31.0" prefWidth="225.0" promptText="Program ID" />
      <JFXTextField fx:id="txtProgram" labelFloat="true" layoutX="50.0" layoutY="200.0" prefHeight="31.0" prefWidth="358.0" promptText="Program" />
      <JFXTextField fx:id="txtDuration" labelFloat="true" layoutX="50.0" layoutY="250.0" prefHeight="31.0" prefWidth="420.0" promptText="Duration" />
      <JFXTextField fx:id="txtFee" labelFloat="true" layoutX="50.0" layoutY="300.0" prefHeight="31.0" prefWidth="225.0" promptText="Fee(LKR)" />
      <TableView fx:id="tblCourse" layoutX="25.0" layoutY="375.0" prefHeight="250.0" prefWidth="1000.0">
        <columns>
          <TableColumn prefWidth="146.0" text="Program ID" />
          <TableColumn minWidth="0.0" prefWidth="330.0" text="Program" />
            <TableColumn prefWidth="180.0" text="Duration" />
            <TableColumn prefWidth="171.0" text="Fee (LKR)" />
        </columns>
      </TableView>
      <JFXButton fx:id="btnSave" layoutX="750.0" layoutY="325.0" onAction="#btnSaveOnAction" prefHeight="31.0" prefWidth="107.0" style="-fx-background-color: #27AE60;" text="Save" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></JFXButton>
      <JFXButton fx:id="btnDelete" layoutX="910.0" layoutY="325.0" onAction="#btnDeleteOnAction" prefHeight="31.0" prefWidth="107.0" style="-fx-background-color: #C0392B;" text="Delete" textFill="#f2f2f2">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></JFXButton>
      <JFXButton fx:id="btnCancel" layoutX="918.0" layoutY="645.0" onAction="#btnCancelOnAction" prefHeight="31.0" prefWidth="107.0" style="-fx-background-color: #4D4D4D;" text="Cancel" textFill="WHITE">
         <font>
            <Font name="System Bold" size="15.0" />
         </font></JFXButton>
   </children>
</AnchorPane>
